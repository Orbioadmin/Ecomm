@model Orbio.Web.UI.Areas.Admin.Models.Attribute.ProductAttributeModel

@{
    ViewBag.Title = "CreateProductAttribute";
}

<section class="wp-request wp-product-attr-create">
    <div class="container">
        <div class="catalog-bulk col-md-12" style="padding-left:0px;">
            <div class="pull-left">
                <label class="gift-product"></label>
                <h1>ADD A NEW PRODUCT ATTRIBUTE</h1>
            </div>
            <div class="pull-right"><a href="product-attributes.html"><input type="button" value="BACK TO PRODUCT ATTRIBUT LIST" class="but savbut butt"><i class="back"></i></a></div>

        </div>
    </div>
    <div class="container">
        <div class="col-md-12">
            <div class="pull-right">
                <div class="options">
                    <input type="button" value="Save" class=" Sbut   ssbut1">
                    <input type="button" value="Save and Continue Edit" class=" Sbut   ssbut1">
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="col-md-12 ">
            <div class="col-md-3 tabcustomer " style="padding-left:0px;">
            </div>
            <div class="col-md-9 colmd1 tabcustomer ">
                <div class="tab-content ">
                    <div role="tabpanel" class="tab-pane in active" id="standard">
                        <div class="col-md-12 product-specification">
                            <div class="col-md-12">
                                <div class="col-md-3"><label> Name:</label></div>
                                <div class="col-md-3">@Html.TextBoxFor(m => m.Name, new { @class = "produtxt" })</div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-3"><label> Description:</label></div>
                                <div class="col-md-9">
                                        @Html.TextAreaFor(m => m.Description, new { @class = "produtxt" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

