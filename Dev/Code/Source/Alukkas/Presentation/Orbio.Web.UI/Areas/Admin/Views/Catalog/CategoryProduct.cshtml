@model Orbio.Web.UI.Areas.Admin.Models.Catalog.CategoryDetailModel


    <div class="col-md-9 main_order_table" style="width: 100%;">
        <table class="item_admin_order">
            <thead>
            <td>Product</td>
            <td>is featured product?</td>
            <td>display order</td>
            <td>delete</td></thead>
            <tbody>
                @if (this.Model.Products != null)
                {
                    if (this.Model.Products.Count > 0)
                    {
                        int count=1;
                        foreach (var item in Model.Products)
                        {
                            if(count==1)
                            { 
                            <tr class="first_row">
                                <td class="varient_align">@item.Name</td>
                                <td class="varient_align">@item.IsFeaturedProduct</td>
                                <td class="varient_align">@item.DisplayOrder</td>
                                <td class="varient_align"><a style="cursor:pointer" href="@Url.Action("DeleteCategoryProduct", "Catalog", new { Id = Model.Categories.Id, cId = item.Id })" onclick=" return confirm('Are You Sure'); "><label class="delete_ring"></label></a></td>
                            </tr>
                                count++;
                            }
                            else
                            {
                                <tr class="second_row">
                                    <td class="varient_align">@item.Name</td>
                                    <td class="varient_align">@item.IsFeaturedProduct</td>
                                    <td class="varient_align">@item.DisplayOrder</td>
                                    <td class="varient_align"><a style="cursor:pointer" href="@Url.Action("DeleteCategoryProduct", "Catalog", new { Id = Model.Categories.Id, cId = item.Id })" onclick=" return confirm('Are You Sure'); "><label class="delete_ring"></label></a></td>
                                </tr>
                                count = 1;
                            }
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4"> No products available</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4"> No products available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

  
    <script>
        function Delete(Id) {
            var r = confirm("Do you want to delete ?");
            if (r == true) {
                window.location.href = '@Url.Action("DeleteCategoryProduct", "Catalog", new { id = Model.Categories.Id })?cId=' + Id
            }
        }
    </script>
