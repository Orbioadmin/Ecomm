@model Orbio.Web.UI.Areas.Admin.Models.Attribute.CheckoutAttributeModel

@using Orbio.Core.Domain.Admin.Catalog;


<div class="col-md-12 add_cart_left_side edit_checkout_attr_main">

        <div class="form-group row" style="margin-top:10px">
            @Html.HiddenFor(m => m.Id, new { Value = Model.Id })
            <div class="col-md-2"><label>Name : </label></div>
            <div class="col-md-4">@Html.TextBoxFor(m => m.Name, new { @class = "edit_text_checkout", required = "required" })</div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"><label>Text Prompt : </label></div>
            <div class="col-md-4">@Html.TextBoxFor(m => m.TextPrompt, new { @class = "edit_text_checkout" })</div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"><label>Required : </label></div>
            <div class="col-md-4">@Html.CheckBoxFor(m => m.IsRequired, new { @class = "required_check_edit" })</div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"><label>Shipable Product Required:</label></div>
            <div class="col-md-4">@Html.CheckBoxFor(m => m.ShippableProduct, new { @class = "required_check_edit" })</div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"><label>Tax Exempt : </label></div>
            <div class="col-md-4">@Html.CheckBoxFor(m => m.IsTaxExempt, new { @class = "required_check_edit" })</div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"><label>Tax Category: </label></div>
            <div class="col-md-4">
            @Html.DropDownListFor(m => m.TaxCategoryId, new SelectList(Model.TaxCategory, "Id", "Name"), new { @class = "edit_text_checkout" })</div>
        </div>
        <div class="form-group row">
        <div class="col-md-2"><label>Control Type:</label></div>
        <div class="col-md-4">
        @Html.DropDownListFor(m => m.ControlTypeId, from AttributeControlType controlType in Enum.GetValues(typeof(AttributeControlType))
                                                    select new SelectListItem() { Text = controlType.ToString(), Value = ((int)controlType).ToString() }, new { @class = "edit_text_checkout" })
    </div>
    </div>
        <div class="form-group row">
            <div class="col-md-2"><label>Display order : </label></div>
            <div class="col-md-4">@Html.TextBoxFor(m => m.DisplayOrder, new { @class = "edit_text_checkout", @type = "number" })</div>
        </div>

</div>


