@model List<Orbio.Web.UI.Areas.Admin.Models.Attribute.SpecificationAttributeModel>

@{
    ViewBag.Title = "ListSpecificationAttribute";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<div class="container">
    <div class="main_edit_order">
        <span class="edit_order_details"><span class="edit_order_icon"></span><a href="">SPECIFICATION ATTRIBUTES</a></span>
        <span class="back_to_order"><a href="@Url.Action("AddSpecificationAttribute", "Attribute")"><input type="button" value="Add New" class="add_cat_button"></a></span>
    </div>
    <div class="col-md-12" style=" margin-bottom: 34px;background-color: #fff;margin-top: 10px;">
        <div class="col-md-9 main_order_table" style="width:100%">
            <table class=" item_admin_order">
                <thead>
                <td style="width:40%">Name</td>
                <td>Display Order</td>
                <td>Edit</td>
                <td>Delete</td>
                </thead>
                <tbody>

                <tbody>
                    @if (Model.Count > 0)
                    {
                        int count = 1;
                        foreach (var item in Model)
                        {
                            if (count == 1)
                            {
                                @:<tr class="first_row">
                                    count++;
                              }
                                    else
                                    {
                                @:<tr class="second_row">
                                    count=1;
                                    }
                                    
                                    <td class="varient_align" style="text-align:center">@item.Name</td>
                                    <td class="varient_align" style="text-align:center">@item.DisplayOrder</td>
                                    <td class="varient_align" style="text-align:center">
                                        <a href="@Url.Action("EditSpecificationAttribute", "Attribute", new { Id = item.Id })"><label class="edit_ring"></label></a>
                                    </td>
                                    <td class="varient_align" style="text-align:center">
                                        <a href="@Url.Action("DeleteSpecificationAttribute", "Attribute", new { Id = item.Id })"><label label class="delete_ring" onclick=" return confirm('Are you sure you want to delete'); "></label></a>
                                    </td>
                                @:</tr>
                        }

                    }
                    else
                    {
                        <tr style="display: table-row;">

                            <td colspan="3">No records to display</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        </div>
    </div>
