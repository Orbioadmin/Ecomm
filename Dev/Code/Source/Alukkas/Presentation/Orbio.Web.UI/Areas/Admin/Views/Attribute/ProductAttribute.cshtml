@model List<Orbio.Web.UI.Areas.Admin.Models.Attribute.ProductAttributeModel>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<div class="container">
    <div class="main_edit_order">
        <span class="edit_order_details"><span class="edit_order_icon"></span><a href="">PRODUCT ATTRIBUTES</a></span>
        @*<span class="back_to_order"><a href="@Url.Action("AddProductAttribute","Attribute")"><input type="button" value="Add New" class="add_cat_button"></a></span>*@
    </div>
    <div class="col-md-12" style=" margin-bottom: 34px;background-color: #fff;margin-top: 10px;">

        <div class="col-md-9 main_order_table" style="width: 72%;">
            <table class=" item_admin_order">
                <thead>
                <td>Name</td>
                <td>Description</td>
                <td>Edit/Delete</td>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        if (Model.Count > 0)
                        {
                            int count = 1;
                            foreach (var item in Model)
                            {
                                <script type="text/javascript">
                                    $(document).ready(function () {
                                        toggleOrderItemEdit@(item.Id)(false);
                                    });
                                </script>

                                <script type="text/javascript">
                                    function toggleOrderItemEdit@(item.Id)(editMode) {
                                        if (editMode) {
                                            $('#lbldescription@(item.Id)').hide();
                                            $('#txtdescription@(item.Id)').show();
                                            $('#lblname@(item.Id)').hide();
                                            $('#txtname@(item.Id)').show();
                                            $('#btnDeleteOrderItem@(item.Id)').hide();
                                            $('#btnEditOrderItem@(item.Id)').hide();
                                            $('#btnSaveOrderItem@(item.Id)').show();
                                            $('#btnCancelOrderItem@(item.Id)').show();
                                        }
                                        else {
                                            $('#lbldescription@(item.Id)').show();
                                            $('#txtdescription@(item.Id)').hide();
                                            $('#lblname@(item.Id)').show();
                                            $('#txtname@(item.Id)').hide();
                                            $('#btnDeleteOrderItem@(item.Id)').show();
                                            $('#btnEditOrderItem@(item.Id)').show();
                                            $('#btnSaveOrderItem@(item.Id)').hide();
                                            $('#btnCancelOrderItem@(item.Id)').hide();
                                        }
                                    }
                                </script>

                                if (count == 1)
                                {
                                    using (Html.BeginForm("UpdateProductAttribute", "Attribute", new { Id = @item.Id }, FormMethod.Post, new { Id = "formEditProductAttribute" + item.Id }))
                                    {
                                        @:<tr class="first_row">
                                            <td class="varient_align" style="text-align:center"><label name="lblname@(item.Id)" id="lblname@(item.Id)">@item.Name</label><input type="text" name="txtname@(item.Id)" value="@item.Name" id="txtname@(item.Id)" style="display:none;font-size: small;"></td>
                                            <td class="varient_align" style="text-align:center"><label name="lbldescription@(item.Id)" id="lbldescription@(item.Id)">@item.Description</label><input type="text" cols="4" rows="5" name="txtdescription@(item.Id)" value="@item.Description" id="txtdescription@(item.Id)" style="display:none;font-size: small;"></td>
                                            @:<td class="varient_align" style="text-align:center">
                                                @:<input type="submit" name="btnSaveOrderItem@(item.Id)" value="" id="btnSaveOrderItem@(item.Id)" class="edit_save" style="display:none;" />
                                                @:<input type="submit" name="btnCancelOrderItem@(item.Id)" value="" onclick="toggleOrderItemEdit@(item.Id)    (false);return false; " id="btnCancelOrderItem@(item.Id)" class="edit_cancel" style="display:none;" />
                                                @: <input type="button" name="btnEditOrderItem@(item.Id)" value="" onclick="toggleOrderItemEdit@(item.Id)(true);return false; " id="btnEditOrderItem@(item.Id)" class="edit_ring" />
                                                @: <a href="@Url.Action("DeleteProductAttribute", "Attribute", new { Id = item.Id })"><input type="button" name="btnDeleteOrderItem@(item.Id)" value="" id="btnDeleteOrderItem@(item.Id)" class="delete_ring" onclick=" return confirm('Are You Sure'); " /></a>
                       
                                               
                                            @:</td>
                                           
                                       @:</tr>
                                    }
                                    count++;
                                }
                                else
                                {
                                    using (Html.BeginForm("UpdateProductAttribute", "Attribute", new { Id = @item.Id }, FormMethod.Post, new { Id = "formEditProductAttribute" + item.Id }))
                                    {
                                        @:<tr class="second_row">
                                            <td class="varient_align" style="text-align:center"><label name="lblname@(item.Id)" id="lblname@(item.Id)">@item.Name</label><input type="text" name="txtname@(item.Id)" value="@item.Name" id="txtname@(item.Id)" style="display:none;font-size: small;"></td>
                                            <td class="varient_align" style="text-align:center"><label name="lbldescription@(item.Id)" id="lbldescription@(item.Id)">@item.Description</label><input type="text" name="txtdescription@(item.Id)" cols="4" rows="5" value="@item.Description" id="txtdescription@(item.Id)" style="display:none;font-size: small;"></td>
                                            @:<td class="varient_align" style="text-align:center">
                                                @:<input type="submit" name="btnSaveOrderItem@(item.Id)" value="" id="btnSaveOrderItem@(item.Id)" class="edit_save" style="display:none;" />
                                                @:<input type="submit" name="btnCancelOrderItem@(item.Id)" value="" onclick="toggleOrderItemEdit@(item.Id)    (false);return false; " id="btnCancelOrderItem@(item.Id)" class="edit_cancel" style="display:none;" />
                                                @: <input type="button" name="btnEditOrderItem@(item.Id)" value="" onclick="toggleOrderItemEdit@(item.Id)(true);return false; " id="btnEditOrderItem@(item.Id)" class="edit_ring" />
                                                @: <a href="@Url.Action("DeleteProductAttribute", "Attribute", new { Id = item.Id })"><input type="button" name="btnDeleteOrderItem@(item.Id)" value="" id="btnDeleteOrderItem@(item.Id)" class="delete_ring" onclick=" return confirm('Are You Sure'); " /></a>
                                               
                                            @:</td>
                                           
                                        @:</tr>
                                    }
                                    count = 1;
                                }
                            }
                        }
                    }
                </tbody>
            </table>

        </div>

        <div class="col-md-3 add_new_projects">
            @Html.Action("AddProductAttribute", "Attribute")
        </div>
    </div>
        </div>
