@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}
@using (Html.BeginForm())
{ 
    <div class="container">
        <div class="main_edit_order">
            <span class="edit_order_details"><span class="edit_order_icon"></span>Best Sellers</span>

        </div>

        @*<div class="tab_side_solutions col-md-12" style="margin-top: 10px; padding-bottom: 10px;">*@
        <div class="tab-content tab_content_solutions" id="myTabContent">
            <div aria-labelledby="home-tab" id="info" class="tab-pane fade in active  " role="tabpanel">
                @Html.Action("SearchSellers", "Order")

                @Html.Action("BestSellersList", "Order")
            </div>
        </div>
    </div>
    @*</div>*@
}
@section scripts {
    <script>
            $(document).ready(function () {
                // create DateTimePicker from input HTML element
                 $("#StartDate").kendoDatePicker();
                 $("#EndDate").kendoDatePicker();
                    });   </script>

<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        $(document).on("click", "#contentPager a[href]", function () {
            $.ajax({
                url: $(this).attr("href"),
                type: 'GET',
                cache: false,
                success: function (result) {
                    $('#bestSellerList').html(result);
                }
            });
            return false;
        });
    });
</script>

}