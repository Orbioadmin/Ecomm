@using PagedList
@using PagedList.Mvc

@model IPagedList<Orbio.Web.UI.Areas.Admin.Models.Product.ProductReviewModel>

<div class="col-md-9 main_order_table" style="width: 100%;" id="prodReview">
    <table class="item_admin_order">
        <thead>
        <td></td>
        <td>Product</td>
        <td>Customer</td>
        <td>Title</td>
        <td>Review Text</td>
        <td style="width:100px">Rating</td>
        <td style="width:100px">Is Approved</td>
        <td style="width:100px">Created On</td>
        <td>Edit</td>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                int count = 1;
                foreach (var item in this.Model)
                {
                    if (count == 1)
                    {
                        @:<tr class="first_row">
                            count++;
                            }
                            else
                            {
                            @:<tr class="second_row">
                            count = 1;
                            }
                            <td class="varient_align">
                                <input type="checkbox" name="Review" id="chkbxreview" value="@item.Id" />
                            </td>
                            <td class="varient_align">
                                <a href="@Url.Action("Edit","Product",new{id=item.ProductId})">@item.ProductName</a>
                            </td>
                            <td class="align_center">
                                <a href="@Url.Action("EditCustomer", "Customer", new { Id = item.CustomerId })">@item.Email</a>
                            </td>
                            <td class="align_center">@item.Title</td>
                            <td class="align_center">@item.ReviewText</td>
                            <td class="align_center">
                                @if (item.Rating == 0)
                                {
                                    <div class="star_rt0"></div>
                                }
                                else if (item.Rating == 1)
                                {
                                    <div class="star_rt1"></div>
                                }
                                else if (item.Rating == 2)
                                {
                                    <div class="star_rt2"></div>
                                }
                                else if (item.Rating == 3)
                                {
                                    <div class="star_rt3"></div>
                                }
                                else if (item.Rating == 4)
                                {
                                    <div class="star_rt4"></div>
                                }
                                else
                                {
                                    <div class="star_rt5"></div>
                                }
                                </td>
                            <td class="align_center">
                                <label class="@(item.IsApproved ? "img_sprite1" : "img_sprite")"></label>
                            </td>
                            <td class="align_center">
                                @item.CreatedOn
                            </td>
                            <td class="align_center">
                                <a href="@Url.Action("Edit", "ProductReview", new { Id=item.Id })"><input type="button" class="edit_ring" /></a>
                            </td>
                            @:</tr>
                        }
                        }
                        else
                        {
                        <tr>
                            <td colspan="9">No result found</td>
                        </tr>
                        }
                    </tbody>
                </table>


                <div class="pagedList" id="contentPager" style="float:right">
                    @Html.PagedListPager(Model, page => Url.Action("ProductReviewList", new { page }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
                </div>
            </div>






