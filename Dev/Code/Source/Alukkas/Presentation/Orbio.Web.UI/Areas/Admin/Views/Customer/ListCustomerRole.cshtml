@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<div class="container">
    <div class="main_edit_order" style="padding-bottom :15px">
        <span class="edit_order_details"><span class="shipmen_icon"></span><a href="">Customer Roles</a></span>
        @*<span class="back_to_order" style="padding-top:0px">
            <a href="@Url.Action("AddCustomerRole", "Customer")"><input type="button" value="Add New" class="add_cat_button"></a>
        </span>*@
