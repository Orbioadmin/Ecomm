
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container">
        <div class="main_edit_order">
            <span class="edit_order_details"><span class="edit_order_icon"></span><a href="" class="add_new_check">Product Review</a></span>
            <span class="refresh_button"><a style="cursor:pointer" href="@Url.Action("List", "ProductReview")"><label></label></a></span>
            <span class="back_to_order">
                <input type="submit" value="Approve selected" class="add_cat_button" name="Approve">
                <input type="submit" value="Disapprove selected" class="add_cat_button" name="Disapprove">
            </span>
        </div>


        <div class="tab-content tab_content_solutions" id="myTabContent">
            <div aria-labelledby="home-tab" id="info" class="tab-pane fade in active  " role="tabpanel">
                @Html.Action("Search", "ProductReview")

                @Html.Action("ProductReviewList", "ProductReview")
            </div>
        </div>
    </div>

}

@section scripts {
<script>
    $(document).ready(function () {
        // create DateTimePicker from input HTML element
        $("#StartDate").kendoDatePicker();
        $("#EndDate").kendoDatePicker();
    });   </script>




    <script language="javascript" type="text/javascript">
    $(document).ready(function () {
        var infoForm = $("#infoForm");
        $(document).on("click", "#contentPager a[href]", function () {
            $.ajax({
                data: infoForm.serialize(),
                url: $(this).attr("href"),
                cache: false,
                type: "GET",
                success: function (data) {
                    $('#prodReview').html(data);
                }
            });
            return false;
        });
    });
    </script>
}

