@model Orbio.Web.UI.Areas.Admin.Models.Component.ProductComponentModel

<h3>NEW PRODUCT COMPONENT</h3>
@*<form action="" method="">*@
@using (Html.BeginForm("AddOrUpdateProductComponent", "Component", FormMethod.Post, new { }))
{
    @Html.HiddenFor(m => m.Id, new { Value = Model.Id })
    @Html.TextBoxFor(m => m.Name, new { @class = "text_sku", required = "required", @placeholder = "Name" })
    <div class="form-group">
        <label style="padding-left: 5px;"> Is Active : </label>
        @Html.CheckBoxFor(m => m.IsActive)
    </div>
    <div class="form-group">
        <label style="padding-left: 5px;"> Is Variable Price : </label>
        @Html.CheckBoxFor(m => m.IsVariablePrice)
    </div>
    <input type="submit" value="Add PRODUCT COMPONENT" class="add_product_submit">
}