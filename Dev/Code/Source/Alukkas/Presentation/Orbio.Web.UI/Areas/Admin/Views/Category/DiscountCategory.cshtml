@model Orbio.Web.UI.Areas.Admin.Models.Catalog.CategoryDetailModel

<div role="tabpanel" class="tab-pane" id="products">
    <div class="col-lg-12 protab">
        @*<label>You need to save the category before you can add products for this category page.</label>*@
        <div class="table-responsive best-seller-table">
            <table id="tableData1" class="table table-bordered table-striped ">
                <thead>
                    <tr>
                        <th>Discounts</th>
                        @*<th>Is featured product?</th>
                            <th>Dsiplay Order</th>

                            <th>VIEW</th>
                            <th>Edit</th>*@
                    </tr>
                </thead>
                <tbody>
                @if (this.Model.Discount!=null)
                    {
                        if (this.Model.Discount.Count > 0)
                    {
                        foreach (var item in this.Model.Discount)
                    {
                        <tr style="display: table-row;">
                            <td>@item.Name</td>
                            <td></td>
                        </tr>
                    }
                    }
                    else
                    {
                        <tr style="display: table-row;">
                            <td>No discounts available. Create at least one discount before mapping.</td>
                            
                        </tr>
                    }
                }
                    
                </tbody>
            </table>
            @*<div class="pull-left1"><input type="button" class="but-refresh"></div>*@
            @*<div class="pull-right1"><input type="button" value="Add New Discount" class="but ssbut "></div>*@
        </div>
    </div>
</div>
