@model List<Orbio.Web.UI.Areas.Admin.Models.Component.ProductComponentModel>
@{
    ViewBag.Title = "ListProductComponent";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<div class="container">
    <div class="main_edit_order">
        <span class="edit_order_details"><span class="edit_order_icon"></span><a href="">PRODUCT COMPONENT</a></span>
        <span class="back_to_order"><a href="@Url.Action("AddProductComponent", "Component")"><input type="button" value="Add New" class="add_cat_button"></a></span>
    </div>
    <div class="col-md-12">
        <table class="product_attr_table">
            <thead>
            <td>Name</td>
            <td>Edit/Delete</td>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a href="@Url.Action("EditProductComponent", "Component", new { Id = item.Id })"><label class="edit_ring"></label></a>
                            <a href="@Url.Action("DeleteProductComponent", "Component", new { Id = item.Id })"><label class="delete_ring" onclick=" return confirm('Are You Sure'); "></label></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>