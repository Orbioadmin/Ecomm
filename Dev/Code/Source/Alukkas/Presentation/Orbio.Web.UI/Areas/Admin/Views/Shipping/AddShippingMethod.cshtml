@model Orbio.Web.UI.Areas.Admin.Models.Configuration.ShippingMethodModel

<h3>Add New Shipping Method</h3>
@*<form action="" method="">*@
@using (Html.BeginForm("AddShippingMethod", "Shipping", FormMethod.Post, new { }))
{
    @Html.TextBoxFor(m => m.Name, new { @class = "text_sku", required = "required", @placeholder = "Name" })
     @Html.TextBoxFor(m => m.Description, new { @class = "text_sku", required = "required", @placeholder = "Description" })
   
    <div class="form-group">
        <label style="font-size: small;padding-left: 5px;"> Display Order : </label>
        @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "text_sku", style = "width:130px", type = "number" })
    </div>
    <input type="submit" value="Add Shipping Method" class="add_product_submit">
}