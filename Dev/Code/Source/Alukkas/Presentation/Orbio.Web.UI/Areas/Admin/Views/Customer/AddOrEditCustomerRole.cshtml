@model Orbio.Web.UI.Areas.Admin.Models.Customers.CustomerRoleModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}


<div class="container">
    @using (Html.BeginForm("AddOrEditCustomerRole", "Customer", FormMethod.Post, new { }))
    {
        @Html.HiddenFor(m => m.Id, new { Value = Model.Id })
        
            if (Model.Id == 0)
            {
                <div class="main_edit_order">
                    <span class="edit_order_details"><span class="edit_order_icon"></span>ADD NEW CUSTOMER ROLE</span>
                    <span class="back_to_order">
                        <input type="submit" value="Save" class="add_cat_button">
                        <a href="@Url.Action("ListCustomerRole", "Customer")"><input type="button" value="Cancel" class="delete_cat_button"></a>
                    </span>
                    </div>
            }
            else
            {
                <div class="main_edit_order">
                    <span class="edit_order_details">
                        <span class="edit_order_icon"></span><a href="" class="add_new_check">EDIT CUSTOMER ROLE - @Model.Name</a>
                    </span>
                    <span class="back_to_order"><u><a href="@Url.Action("ListCustomerRole", "Customer")">back to customer role list</a></u></span>
                </div>
                <div class="preview_main">
                    <ul>
                        <li><input type="submit" class="prev_button" value="Save"></li>
                        <li><a href="@Url.Action("DeleteCustomerRole", "Customer", new { Id = Model.Id })"><input type="button" value="Delete" class="prev_button" onclick="return confirm('Are you sure you want to delete');">
                    </a></li>
                    </ul>
                </div>
                    }
        <div class="new_product_attribute_div">
                <div class="form-group">
                    <label>Name : </label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "add_product_attr_name", required = "required", @style = "margin-left: 12%;", onkeyup = "javascript:GenerateScript()", id = "rolename" })
                </div>
                <div class="form-group">
                    <label> System Name : </label>
                    @Html.TextBoxFor(m => m.SystemName, new { @class = "add_product_attr_name", @style = "margin-left: 3.5%;", id = "rolesysname" })
                </div>
                <div class="form-group">
                    <label> Free Shipping : </label>
                    @Html.CheckBoxFor(m => m.FreeShipping, new { @class = "show_on_home_page_check", @style = "margin-left: 2.5%;" })
                </div>
                <div class="form-group">
                    <label> Tax Exempt : </label>
                    @Html.CheckBoxFor(m => m.TaxExempt, new { @class = "show_on_home_page_check", @style = "margin-left: 4.5%;" })
                </div>
                <div class="form-group">
                    <label> Active : </label>
                    @Html.CheckBoxFor(m => m.Active, new { @class = "show_on_home_page_check", @style = "margin-left: 10%;" })
                </div>
    @*<div class="form-group">
        <label class="description_label_add_prdct"> Is System Role : </label>
        @Html.TextBoxFor(m => m.SystemName, new { @class = "add_product_attr_name" })
    </div>*@
 </div>
    }
</div>

<script>
    function GenerateScript()
    {
        var key = $("#rolename").val().trim();
        key = key.replace(/ /g, "");
        $("#rolesysname").val(key);
    }
</script>