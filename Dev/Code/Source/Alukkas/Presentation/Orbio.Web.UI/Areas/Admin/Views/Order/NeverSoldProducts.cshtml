@model List<Orbio.Web.UI.Areas.Admin.Models.Orders.NeverSoldReportModel>

<div class="col-md-3 add_new_projects" style="width: 100%;background-color:#fff;margin-left: 15px">
    <div class="col-md-9 main_order_table" style="width:100%">
        <table class="item_admin_order">
            <thead>
            <td>Name</td>
            <td>View</td>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    int count = 1;
                    foreach (var item in this.Model)
                    {
                        if (count == 1)
                        {
                            @:<tr class="first_row">
                                count++;
                        }
                        else
                        {
                            @:<tr class="second_row">
                                count = 1;
                        }
                        <td class="align_center">@item.Name</td>

                        <td class="align_center"><a href="@Url.Action("Edit", "Product", new { id = item.Id })">View</a></td>
                        @:</tr>
                    }
                }
                else
                {
                    <tr>
                        <td class="align_center" colspan="4">No records to display</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

