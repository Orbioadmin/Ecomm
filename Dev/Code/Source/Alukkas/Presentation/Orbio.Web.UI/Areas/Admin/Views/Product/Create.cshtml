@model Orbio.Web.UI.Areas.Admin.Models.Product.ProductModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}
<div class="container">
    <div class="main_edit_order">
        <span class="edit_order_details"><span class="edit_order_icon"></span><a href="" class="add_new_check">Create product</a></span>
        <span class="back_to_order"><u><a href="@Url.Action("List","Product")">Back to product list</a></u></span>
    </div>
    @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { Id = "formaddproduct" }))
    {
        <div class="preview_main">
            <ul>
                @*<li><input type="button" class="prev_button" value="Preview"></li>*@
                <li><input type="submit" class="prev_button" value="Save"></li>
                @*<li><input type="button" class="prev_button" value="Save & Continue Edit"></li>*@
                @*<li><input type="button" class="prev_button" value="Copy Product"></li>
                    <li><input type="button" class="prev_button" value="Delete"></li>*@
            </ul>
        </div>
    <div class="moving_menu_main">
        <div class="srlBx">
            <div id="HomeMarquee_srlCont" class="srlContHome">
                <div id="srlData">
                    <ul class="itabN1 clearfix" id="myTab" role="tablist">
                        <li role="presentation" class="active">
                            <a href="#productinfo" class="" aria-expanded="true" data-toggle="tab" role="tab">
                                Product info
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#seo" class="" data-toggle="tab" role="tab" aria-expanded="true">
                                SEO
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#pictures" class="" data-toggle="tab" role="tab" aria-expanded="false">
                                Pictures
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#specification" class="" data-toggle="tab" role="tab" aria-expanded="false">
                                Specification Attributes
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#attribute" class="" data-toggle="tab" role="tab" aria-expanded="false">
                                Products Attributes
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#productcomponent" class="" data-toggle="tab" role="tab" aria-expanded="false">
                                Product Component
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#pricecomponent" class="" data-toggle="tab" role="tab" aria-expanded="false">
                                Price Component
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#acl" class="" data-toggle="tab" role="tab" aria-expanded="false">
                                Access Control List
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content product_add_tab_main new" id="myTabContent">
                        @Html.Partial("_CreatOrUpdateInfo", Model)

                        <div id="seo" class="tab-pane fade" role="tabpanel">
                            @Html.Partial("_CreateOrUpdateSeo", Model)
                        </div>
                        <div id="pictures" class="tab-pane fade" role="tabpanel">
                            You need to save the product before you can upload pictures for this product page.
                        </div>

                        <div id="specification" class="tab-pane fade" role="tabpanel">
                            You need to save the product before you can add product specification attributes for this product page.
                        </div>

                        <div id="attribute" class="tab-pane fade" role="tabpanel">
                            You need to save the product before you can add attributes for this page.
                        </div>

                        <div id="productcomponent" class="tab-pane fade" role="tabpanel">
                            You need to save the product before you can add product component for this product page.
                        </div>

                        <div id="pricecomponent" class="tab-pane fade" role="tabpanel">
                            You need to save the product before you can add price component for this product page.
                        </div>

                        <div id="acl" class="tab-pane fade" role="tabpanel">
                            
                        </div>
                    </div>
                    <div class="cB"></div>
                </div>
            </div>
            <div class="cB"></div>
        </div>
    </div>

    }
</div>
<script src="~/Areas/Admin/Scripts/tinymce/tinymce.min.js"></script>
@section scripts {
