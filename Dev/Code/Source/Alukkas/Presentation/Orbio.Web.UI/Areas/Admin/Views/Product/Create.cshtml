            toolbar3: "table | hr removeformat | subscript superscript | charmap emoticons | print fullscreen | ltr rtl | spellchecker | visualchars visualblocks nonbreaking template pagebreak restoredraft",

            menubar: false,
            toolbar_items_size: 'small',

            style_formats: [
                    { title: 'Bold text', inline: 'b' },
                    { title: 'Red text', inline: 'span', styles: { color: '#ff0000' } },
                    { title: 'Red header', block: 'h1', styles: { color: '#ff0000' } },
                    { title: 'Example 1', inline: 'span', classes: 'example1' },
                    { title: 'Example 2', inline: 'span', classes: 'example2' },
                    { title: 'Table styles' },
                    { title: 'Table row 1', selector: 'tr', classes: 'tablerow1' }
            ],

            templates: [
                    { title: 'Test template 1', content: 'Test 1' },
                    { title: 'Test template 2', content: 'Test 2' }
            ]
        });</script>

    <script type="text/javascript">
        $().ready(function () {

            $('.enabling').on('click', function () {
                if ($('.enabling').is(':checked')) {
                    $(".show_div_check_true").show();
                } else {
                    $(".show_div_check_true").hide();
                }
            });
            $('.enablingTax').on('click', function () {
                if ($('.enablingTax').is(':checked')) {
                    $("#taxcat").show();
                } else {
                    $("#taxcat").hide();
                }
            });

            $('.enablingInv').on('change', function () {
                var invValue = $("#ManageInventoryMethodId").val();
                if (invValue == 1) {
                    $("#trackInv").show();
                }
                else {
                    $("#trackInv").hide();
                }
            });

            $("#SpecialPriceStartDateTimeUtc").kendoDateTimePicker({
                value: new Date()
            });
            $("#SpecialPriceEndDateTimeUtc").kendoDateTimePicker({
                value: new Date()
            });
            $("#AvailableStartDateTimeUtc").kendoDateTimePicker({
                value: new Date()
            });
            $("#AvailableEndDateTimeUtc").kendoDateTimePicker({
                value: new Date()
            });

        });

    </script>

<script>
    function GenerateProductSlug() {
        var key = $("#Name").val().trim();
        key = key.replace(/ /g, "-");
        $("#slug").val(key);
    }
</script>
