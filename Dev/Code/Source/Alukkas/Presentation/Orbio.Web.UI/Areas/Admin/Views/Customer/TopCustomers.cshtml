@model List<Orbio.Web.UI.Areas.Admin.Models.Customers.RegisteredCustomerReportLineModel>

@{
    Layout = null;
}
<table class="order_total_main_table" id="tableData">
    <thead>
            <td>Customer</td>
            <td>Order total</td>
            <td>Number of orders </td>
            <td>View</td>
    </thead>
    <tbody>
        @if (Model.Count>0)
        { 
        foreach (var rcr in this.Model)
        {
            <tr>
                <td class="align_center">@rcr.Email</td>
                <td class="align_center">@rcr.OrderTotal</td>
                <td class="align_center">@rcr.OrderCount</td>
                <td class="align_center"><a href="@Url.Action("EditCustomer", "Customer", new { Id= rcr.Customers})">View</a></td>
            </tr>
        }
        }
        else
        {
            <tr>
                <td class="align_center" colspan="4">No records to display</td>
            </tr>
        }
</tbody>
</table>


