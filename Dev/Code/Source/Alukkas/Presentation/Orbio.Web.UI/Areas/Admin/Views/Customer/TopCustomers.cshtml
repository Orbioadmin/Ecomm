@model List<Orbio.Web.UI.Areas.Admin.Models.Customers.RegisteredCustomerReportLineModel>

@{
    Layout = null;
}
@*<div class="col-md-3 add_new_projects" style="width: 65%;background-color:#fff;margin-left: 15px">*@
    <div class="col-md-9 main_order_table" style="width:100%">
        <table class="item_admin_order">
            <thead>
            <td>Customer</td>
            <td>Order total</td>
            <td>Number of orders </td>
            <td>View</td>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    int count = 1;
                    foreach (var rcr in this.Model)
                    {
                        if (count == 1)
                        {
                            @:<tr class="first_row">
                        }
                        else
                        {
                            @:<tr class="second_row">
                        }
                        <td class="align_center">@rcr.Email</td>

                        <td class="align_center">@rcr.OrderTotal.ToString("#,##0.00")</td>

                        <td class="align_center">@rcr.OrderCount</td>

                        <td class="align_center"><a href="@Url.Action("EditCustomer", "Customer", new { Id= rcr.Customers})">View</a></td>
                    @:</tr>

                    }
                }
                else
                {
                    <tr>
                        <td class="align_center" colspan="4">No records to display</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
@*</div>*@


