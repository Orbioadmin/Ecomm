@model List<Orbio.Web.UI.Areas.Admin.Models.MessageTemplates.MessageTemplateModel>

@if(Model.Count>0)
{
    int count = 1;
    foreach(var item in this.Model)
    {
        if(count==1)
        {
            @:<tr class="first_row">
            count++;
        }
        else
        {
            @:<tr class="second_row">
            count = 1;
        }
        <td class="align_center">@item.Name</td>
    <td class="align_center">@item.Subject</td>
    <td class="align_center"><label class="@(item.IsActive ? "img_sprite1" : "img_sprite")"></label></td>
    <td class="align_center">
        <a href="@Url.Action("Edit", "MessageTemplate", new { Id = item.Id })"><input type="button" class="edit_ring" /></a> 
        <a href="@Url.Action("DeleteMessageTemplate", "MessageTemplate", new { Id = item.Id })"><input type="button" class="delete_ring" onclick=" return confirm('Are You Sure'); " /></a>
    </td>
        @:</tr>
    }
}