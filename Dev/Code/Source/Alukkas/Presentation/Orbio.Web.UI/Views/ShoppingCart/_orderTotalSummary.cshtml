@model Orbio.Web.UI.Models.Orders.CartModel

@if (ViewBag.Type == "CheckOut")
{
   @Html.Raw("<div class=\"well\">")
}
<div class="cart_total">
    @if (ViewBag.Type == "CheckOut")
{
    @Html.Raw("<h1 class=\"order_sum\">ORDER SUMMARY</h1>")
}
@{
    var cartTotal=(Convert.ToDecimal(Model.SubTotal) - Convert.ToDecimal(Model.DiscountAmount)).ToString("#,##0.00");
}
      
        <dl class="dl-horizontal">
            <dt>Cart Sub Total</dt>
            <dd>@ViewBag.Currencycode.@cartTotal</dd>
            <dt>Shipping Charges</dt>
            <dd>0</dd>
            <dt>Total Savings</dt>
            <dd>@ViewBag.Currencycode.@Model.DiscountAmount</dd>
            <dt>Promotional Discounts</dt>
            <dd>0</dd>
            <dt>Estimated Tax</dt>
            <dd>@ViewBag.Currencycode.@Model.TaxAmount</dd>
            <dt class="cart_total">Total</dt>
            <dd class="cart_total">@ViewBag.Currencycode.@Model.Total</dd>
        </dl>
    </div>
@if (ViewBag.Type == "CheckOut")
{
    @Html.Raw("</div>")
}