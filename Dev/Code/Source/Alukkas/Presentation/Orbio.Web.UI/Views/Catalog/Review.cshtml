@model Orbio.Web.UI.Models.Catalog.ReviewModel
@{
    ViewBag.Title = "Review";
}
<div class="container">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li><a href="@Url.RouteUrl("Category", new { SeName = "jewellery" })?p=ct">Jewellery</a></li>
        <li><a href="">@Html.ValueFor(m => m.Name)</a></li>
        <li class="active">Review</li>
    </ol>
    </div>
    <section id="Login" class="Login_home">


        <div class="container" align="center">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="login_inner">

                    <div class="login_form">

                        <h1>Write reviews for @Html.ValueFor(m=>m.Name)</h1>

                        @using (Html.BeginForm("Review", "Catalog", new { ReturnUrl = ViewBag.ReturnUrl,seName=Model.SeName, Name=Model.Name }, FormMethod.Post, new { @class = "form-horizontal " }))
                    {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group">

                        @*<label for="inputEmail3" class="col-sm-4 control-label">Review Title</label>*@
                        @Html.LabelFor(m => m.ReviewTitle, new { @class="col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @*<input type="email" class="form-control" id="inputEmail3">*@
                            @Html.TextBoxFor(m => m.ReviewTitle, new { @class = "form-control" })
                            <span style="color:red">@Html.ValidationMessageFor(m => m.ReviewTitle)</span>
                        </div>

                    </div>
                    <div class="form-group">
                        @*<label for="inputPassword3" class="col-sm-4 control-label">Review Text</label>*@
                        @Html.LabelFor(m => m.ReviewText, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @*<input type="password" class="form-control" id="inputPassword3" placeholder="Password">*@
                            @Html.TextAreaFor(m => m.ReviewText, new { @class = "form-control" })
                            <span style="color:red">@Html.ValidationMessageFor(m => m.ReviewText)</span>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Rating, new { @class = "col-sm-4 control-label" })
                        <span class="ratingStar" style="margin-left: 22px;">
                            @Html.RadioButtonFor(model => model.Rating, "5", new { id = "addproductrating_1", @class = "rating-input" })
                            <label for="addproductrating_1" class="rating-star"></label>
                            @Html.RadioButtonFor(model => model.Rating, "4", new { id = "addproductrating_2", @class = "rating-input" })
                            <label for="addproductrating_2" class="rating-star"></label>
                            @Html.RadioButtonFor(model => model.Rating, "3", new { id = "addproductrating_3", @class = "rating-input" })
                            <label for="addproductrating_3" class="rating-star"></label>
                            @Html.RadioButtonFor(model => model.Rating, "2", new { id = "addproductrating_4", @class = "rating-input" })
                            <label for="addproductrating_4" class="rating-star"></label>
                            @Html.RadioButtonFor(model => model.Rating, "1", new { id = "addproductrating_5", @class = "rating-input" })
                            <label for="addproductrating_5" class="rating-star"></label>
                        </span>

                    </div>

                    <div class="form-group">

                        @*<label for="inputEmail3" class="col-sm-4 control-label">Review Title</label>*@
                        @Html.LabelFor(m => m.CustomerName, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @*<input type="email" class="form-control" id="inputEmail3">*@
                            @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control" })
                            <span style="color:red">@Html.ValidationMessageFor(m => m.CustomerName)</span>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <input type="submit" value="SUBMIT" class="Buynow">
                        </div>
                    </div>
                    }
                    </div>

                </div>
            </div>
        </div>
    </section>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")

        @*<script>
                $()
            </script>*@
    }
