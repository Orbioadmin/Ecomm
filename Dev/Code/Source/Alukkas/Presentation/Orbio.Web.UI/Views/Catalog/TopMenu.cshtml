        $('#search_button').click(function (e) {
            e.preventDefault();
            if ($('#twotabsearchtextbox').val().trim() != "") {
                var url = "@Url.RouteUrl("Category", new { SeName = "Search" })?p=sr&q=" + $('#twotabsearchtextbox').val().trim().replace(/\s/g, '');
                // url = 'Search?p=sr&q=' + $('#twotabsearchtextbox').val();
                window.location.href = url;
            }
            else { return false; }

        });
        $('#twotabsearchtextbox').keydown(function (e) {
            if (e.keyCode == 13) {
                e.preventDefault();
                if ($('#twotabsearchtextbox').val().trim() != "") {
                    var url = "@Url.RouteUrl("Category", new { SeName = "Search" })?p=sr&q=" + $('#twotabsearchtextbox').val().trim().replace(/\s/g, '');
                    //url = 'Search?p=sr&q=' + $('#twotabsearchtextbox').val();
                    window.location.href = url;
                }
                else { return false; }
            }

        });
    });

</script>

