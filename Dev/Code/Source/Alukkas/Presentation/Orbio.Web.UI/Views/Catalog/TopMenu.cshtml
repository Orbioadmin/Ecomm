<div class="second_menu home">
    <div class="container">

        <div class="navbar navbar-default" role="navigation">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse ">
                <ul class="nav navbar-nav ">
                    @helper RenderCategoryLine(CategorySimpleModel category, int level)
{
            if (category.SubCategories.Count > 0)
                        {
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle" onclick="location.href = '@Url.RouteUrl("Category", new { SeName = category.SeName })?p=ct'">@category.Name<i class="fa fa-angle-down"></i></a>
                        @if (category.SubCategories.Count > 0)
                        {
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="row">
                                        <div class="">
                                            @foreach (var subCategory in category.SubCategories)
                                            {
                                                <div class="col-sm-2">
                                                    @RenderSubCategoryLine(subCategory)
                                                </div>
												
                                            }
											    <div class="test">

                                                <a href="#">
                                                    <img class="menu-img" src="~/images/Basic_image/Sub-banner1.jpg">
                                                </a>

                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        }
                    </li>
                        }
            else
            {
                <li><a href="#" onclick="location.href = '@Url.RouteUrl("Category", new { SeName = category.SeName })?p=ct'">@category.Name</a></li>
            }
}


                    @helper RenderSubCategoryLine(CategorySimpleModel category)
{
                    <h3>
                        <a href="@Url.RouteUrl("Category", new { SeName = category.SeName })?p=ct">@category.Name</a>
                    </h3>
                    <ul>
                        @if (category.SubCategories.Count > 0)
                        {
                            int count = 0;
                            foreach (var subCategory in category.SubCategories)
                            {
                                if (count < (int)ViewBag.NumberOfCategory)
                                {
                                    <li><a href="@Url.RouteUrl("Category", new { SeName = subCategory.SeName })?p=ct">@subCategory.Name</a></li>
                                }
                                else
                                {
                                    <li><a href="@Url.RouteUrl("Category", new { SeName = category.SeName })?p=ct"><i>ViewAll</i></a></li>
                                    break;
                                }
                                count++;
                            }

                        }

                    </ul>
}

                    @if (Model != null)
                    {
                        if (Model.Categories.Count > 0)
                        {
                            foreach (var category in Model.Categories)
                            {
                                @RenderCategoryLine(category, 0)
                            }
                        }
                    }
                </ul>
                

            </div><!--/.nav-collapse -->
            @if (workContext.CurrentCustomer.IsAdmin)
                {
                    <ul class="nav navbar-nav navbar-right admin-link">
                        <li><a href="~/Admin">Administrator</a></li>
                    </ul>
                }
        </div>
    </div>
</div>





