@model TopMenuModel
@using Orbio.Web.UI.Models.Catalog;

@{
    var genericAttributeService = Nop.Core.Infrastructure.EngineContext.Current.Resolve<Orbio.Services.Common.IGenericAttributeService>();
    var workContext = Nop.Core.Infrastructure.EngineContext.Current.Resolve<Orbio.Core.IWorkContext>();
}
<div class="top-head clearfix">
    <div class="container">
        <ul class="top-menu">
            <li><a href="@Url.RouteUrl("Category", new { SeName = "AboutUs" })?p=ft">About us</a></li>
            <li><a href="">News</a></li>
            <li><a href="">Blog</a></li>
            <li><a href="@Url.RouteUrl("Category", new { SeName = "ContactUs" })?p=ft">Contact</a></li>
        </ul>
    </div>
</div>
<div class="navbar navbar-default" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/images/Basic_image/logo.png"></a>
        </div>
        @Html.Action("SearchBox", "Catalog")

        <div class=" collapse head_main in">
            <ul class="nav navbar-nav navbar-right">
                <li class="cart_item">
                    @Html.Action("CartItem", "ShoppingCart")
                </li>
                <li>

                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                            <img src="~/images/Basic_image/user.png">
                             @if (workContext.CurrentCustomer.IsRegistered)
                               {
                                <span class="span-title">Hi @ViewBag.UserName</span>
                               }
                             else
                               { 
                                 <span class="span-title">Hi</span>
                               }
                            <span class="caret"></span>
                         </button>
                         <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                            @if (workContext.CurrentCustomer.IsRegistered)
                             {
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("MyAccount", "Customer")">My Account</a></li>
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("LogOut", "Account")">Logout</a></li>
                             }
                            else
                             {
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("Login", "Account")">Login</a></li>
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("Register", "Account")">Register</a></li>
                             }
                        </ul>
                    </div>
                </li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</div>


<div class="second_menu">
    <div class="container">
        <div class="navbar navbar-default" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse ">
                <ul class="nav navbar-nav ">
                    @helper RenderCategoryLine(CategorySimpleModel category, int level)
                    {

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle arrow_box" data-toggle="dropdown" onclick="location.href = '@Url.RouteUrl("Category", new { SeName = category.SeName })?p=ct'">@category.Name</a>
                        @if (category.SubCategories.Count > 0)
                        {
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="row">
                                        <div class="container">
                                            @foreach (var subCategory in category.SubCategories)
                                            {
                                                <div class="col-sm-2">
                                                    @RenderSubCategoryLine(subCategory)
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        }
                    </li>
                    }

                  
                    @helper RenderSubCategoryLine(CategorySimpleModel category)
                    {
                    <h3>
                        <a href="@Url.RouteUrl("Category", new { SeName = category.SeName })?p=ct" class="dropdown-toggle">@category.Name</a>
                    </h3>
                    <ul>
                        @if (category.SubCategories.Count > 0)
                        {
                            int count = 0;
                            foreach (var subCategory in category.SubCategories)
                            {
                                if (count < (int)ViewBag.NumberOfCategory)
                                {
                                    <li><a href="@Url.RouteUrl("Category", new { SeName = subCategory.SeName })?p=ct">@subCategory.Name</a></li>
                                }
                                else
                                {
                                    <li><a href="@Url.RouteUrl("Category", new { SeName = category.SeName })?p=ct"><i>ViewAll</i></a></li>
                                    break;
                                }
                                count++;
                            }
                        }
                    </ul>
                    }
                   
                    @if (Model != null)
                    {
                        if (Model.Categories.Count > 0)
                        {
                            foreach (var category in Model.Categories)
                            {
                                @RenderCategoryLine(category, 0)
                            }
                        }
                    }
                </ul>

            </div><!--/.nav-collapse -->
        </div>
    </div>
</div>

