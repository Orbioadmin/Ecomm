                Html.RenderPartial("_productAttribute", this.Model.ProductVariantAttributes);
            }
                }

                <div class="quan_expect">
                    <div class="row">
                        <div class="col-sm-3">
                            @*@{
                                    var qtyList = new List<object>();
                                     if (this.Model.AllowedQuantities.Count > 0)
