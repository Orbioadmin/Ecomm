            <script type="text/javascript">
    $(document).ready(function () {
        var errMsg = $('#tosterMsg');
        if (errMsg.length > 0 && errMsg.val().length > 0) {
            var splits = errMsg.val().split(';');
            for (var i = 0; i < splits.length; i++) {
                if (splits[i].length > 0) {
                    ShowError(splits[i]);
                }
            }
        }

        var sucMsg = $('#tosterMsgsuccess');
        if (sucMsg.length > 0 && sucMsg.val().length > 0) {
            ShowSuccessMsg(sucMsg.val());
        }
    });
</script>

        <script type="text/javascript">
    var strURL = window.location.href
    var strTab = strURL.substring(window.location.href.indexOf("#") + 1);

    if (strTab == "mywishlist") {
        $('.third-account').addClass('active in');
        $('.second-account').removeClass('active in');
        $('.first-account').removeClass('active in');
    }

    $('#cart_item li a.mywish').on('click', function () {
        $('.third-account').addClass('active in');
        $('.second-account').removeClass('active in');
        $('.first-account').removeClass('active in');
    });

    if($(window).width() < 767){
        var all = $('.Footer_top .col-md-3.col-sm-3 ul').hide();
        $('.Footer_top .col-md-3.col-sm-3 h1').click(function(){
            $(this).parent().toggleClass('active').siblings().removeClass('active');
            var n = $(this).next('ul');
            $(n).slideToggle('slow');
            $('.Footer_top .col-md-3.col-sm-3 ul').not(n).slideUp('slow');
            return false;
        });
    }

    </script>

